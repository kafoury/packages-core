pkgname=linux38-bbswitch
_pkgname=bbswitch
_extramodules=extramodules-3.8-MANJARO
_kernver="$(cat /usr/lib/modules/${_extramodules}/version)"
pkgver=0.4.2
pkgrel=0.2
pkgdesc="kernel module allowing to switch dedicated graphics card on Optimus laptops"
arch=('i686' 'x86_64')
url=("http://github.com/Bumblebee-Project/bbswitch")
license=('GPL')
depends=('linux38')
makedepends=('linux38-headers')
provides=("$_pkgname=$pkgver")
groups=('linux38-extramodules')
install=bbswitch.install
source=("https://github.com/downloads/Bumblebee-Project/bbswitch/${_pkgname}-${pkgver}.tar.gz")
md5sums=('0db72765c6accb49426a40c4cb1556d3')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  # KDIR is necessary even when cleaning
  #make KDIR=/usr/src/linux-${_kernver} clean
  make KDIR=/usr/src/linux-${_kernver}
}

package() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  install -D -m644 bbswitch.ko $pkgdir/usr/lib/modules/${_extramodules}/bbswitch.ko
  # gzip -9 modules
  find "$pkgdir" -name '*.ko' -exec gzip -9 {} \;
  sed -i -e "s/EXTRAMODULES=.*/EXTRAMODULES=${_extramodules}/g" $startdir/*.install
}
