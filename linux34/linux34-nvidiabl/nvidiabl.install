EXTRAMODULES='extramodules-3.4-MANJARO'
VERSION='linux34'

post_install() {
    depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
    echo "vboxdrv" > /etc/modules-load.d/$VERSION-nvidiabl.conf
}

post_upgrade() {
    depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
    echo "vboxdrv" > /etc/modules-load.d/$VERSION-nvidiabl.conf
}


post_remove() {
    depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
    rm /etc/modules-load.d/$VERSION-nvidiabl.conf
}
