pkgbase=linux310
pkgname=('linux310' 'linux310-headers')
_kernelname=-MANJARO
_basekernel=3.10
_basever=310
_aufs=20140113
pkgver=${_basekernel}.27
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=("http://www.kernel.org/pub/linux/kernel/v3.x/linux-${_basekernel}.tar.xz"
